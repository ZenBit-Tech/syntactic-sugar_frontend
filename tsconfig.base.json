{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "."
  },
  "paths": {
    "@pages/*": ["src/pages/*"],
    "@freelance/components": ["../../libs/components/src/index.ts"],
    "redux/*": ["src/redux/*"]
  },
  "exclude": ["node_modules", "tmp"]
}
